-- Penulisan Variabel direkomendasikan menggunakan camelCase
local iniVariabel = 100
print(iniVariabel)

local iniVariabel1 = true
print(iniVariabel1)

local iniVariabel2 = "Hello World"
print(iniVariabel2)

-- Tidak direkomendasikan, Rawan tabrakan variabel
iniVariabelGlobal = 1.6
print(iniVariabelGlobal) 
